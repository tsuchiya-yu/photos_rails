<% content_for :title, "マイページ" %>
<div class='container mx-auto py-8 w-full max-w-xl flex-grow outline-none'>
    <%= render 'shared/page_title', title: 'マイページ' %>

    <section class='mb-8'>
        <%= render 'shared/list_title', title: '設定' %>
        <%= render 'shared/list_item', title: '' %>
        <%= link_to edit_mypage_users_path do %>
            <%= render 'shared/list_item', title: '会員情報の編集' %>
        <% end %>
    </section>

    <!-- admax -->
    <aside class='mt-2 mb-4'>
        <script src="https://adm.shinobi.jp/s/a92897479972bb5947e754729f8c2c8a"></script>
    </aside>
    <!-- admax -->

    <div class="container mx-auto pb-8">
        <%= render 'shared/list_title', title: 'グループ' %>
        <%= render 'shared/list_item', title: '' %>
        <% current_user.groups.each do |group| %>
            <%= link_to mypage_group_path(group) do %>
                <%= render 'shared/list_item', title: group.name %>
            <% end %>
        <% end %>

        <%= link_to new_mypage_group_path do %>
            <%= render 'shared/add_action_label', text: '新しいグループを作成する' %>
        <% end %>

        <%= form_with url: destroy_user_session_path, class: 'text-right mt-5 text-gray-500', method: :delete, local: true do %>
            <button type="submit" class='text-sm' onclick="return confirm('ログアウトしてもよろしいですか？')">ログアウト</button>
        <% end %>

    </div>
</div>